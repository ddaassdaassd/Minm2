<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:visibility="gone"
        android:indeterminate="true" />
    <Button
        android:id="@+id/BotonRetroceder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:backgroundTint="#070707"
        android:onClick="onClickBotonRetroceder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VENDER COBRE"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:fontFamily="fantasy"
        android:layout_marginBottom="16dp"/>

    <!-- Contenedor Horizontal para Cobre y Coin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">

        <!-- Item Cobre -->
        <include
            android:id="@+id/cobre"
            layout="@layout/cobre_counter" />

        <!-- Item Coin -->
        <include
            android:id="@+id/coint"
            layout="@layout/coin_counter"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRECIO POR KG"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="fantasy"/>

    <!-- Item Transacción -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#000000"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="6dp">

            <TextView
                android:id="@+id/FactorMultiplicador"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp">
        <!-- Alineamos el "COMPRUEBA TRANSACCIÓN" con el include "transaccion" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="fantasy"
            android:text="COMPRUEBA TRANSACCIÓN"
            android:textSize="15sp" />

        <include
            android:id="@+id/transaccion"
            layout="@layout/transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Botón Vender -->
    <Button
        android:id="@+id/btn_vender"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:onClick="onClickVender"
        android:text="Vender"
        android:background="@drawable/button_gradient"
        android:fontFamily="fantasy"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"/>
</LinearLayout>
